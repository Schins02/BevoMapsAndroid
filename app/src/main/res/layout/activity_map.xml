<android.support.v4.widget.DrawerLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fab="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="edu.utexas.cs.bevomaps.MapActivity" >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
      android:id="@+id/map"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="com.google.android.gms.maps.MapFragment" />

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:orientation="horizontal"
      android:background="@color/material_white" >

      <ImageButton
        android:id="@+id/menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/button_menu" />

      <EditText
        android:id="@+id/text"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/speech"
        android:layout_toStartOf="@id/speech"
        android:layout_toRightOf="@id/menu"
        android:layout_toEndOf="@id/menu"
        android:background="@color/material_white"
        android:hint="@string/search_hint"
        android:inputType="textAutoComplete"
        />

      <ImageButton
        android:id="@+id/speech"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/button_speech" />
    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
      android:id="@+id/location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      fab:fab_icon="@drawable/ic_crosshair"
      fab:fab_colorNormal="@color/burnt_orange"
      fab:fab_colorPressed="@color/burnt_orange"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_margin="8dp" />
  </RelativeLayout>

  <ListView
    android:id="@+id/drawer"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/material_white" >

  </ListView>
</android.support.v4.widget.DrawerLayout>