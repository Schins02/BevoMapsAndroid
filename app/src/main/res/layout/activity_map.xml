<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.utexas.cs.bevomaps.MapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/map_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/google_grey" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/map_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            app:fab_colorNormal="@color/burnt_orange_100"
            app:fab_colorPressed="@color/burnt_orange_90"
            app:fab_icon="@drawable/ic_crosshair" />

        <include layout="@layout/search_bar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/material_white">

        <TextView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="30dp"
            android:text="@string/options"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/satellite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/options"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@color/material_white"
            android:src="@drawable/satellite" />

        <TextView
            android:id="@+id/satellite_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/options"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/satellite_icon"
            android:text="@string/satellite"
            android:textColor="#000000"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/info_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/satellite_icon"
            android:layout_marginTop="12dp"
            android:background="@color/material_white"
            android:paddingLeft="8dp"
            android:src="@drawable/about" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/satellite_text"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/info_icon"
            android:paddingLeft="30dp"
            android:text="About"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
